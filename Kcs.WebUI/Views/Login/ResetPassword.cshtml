
@{
    ViewData["Title"] = "ResetPassword";
}
<html>
<body>
    <div class="container">
        <h2>Şifre Sıfırla</h2>
        <form action="/Login/ResetPassword" method="post">
            <div class="form-group">
                <label>Email</label>
                <input type="text" class="form-control" name="Email" value="" id="personMail"/>
            </div>
            <div class="form-group">
                <label>Yeni Şifre</label>
                <input type="password" name="Password" class="form-control" value="" id="personPassword" />
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" name="name" value="Sıfırla" id="btnReset" />
            </div>
        </form>
    </div>
</body>
</html>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/ResetPassword.js"></script>



@{
    ViewData["Title"] = "Index";
    string message = ViewBag.Message;
}

<html>
<body>
    <div class="container">
        <h2>Giriş</h2>
            <div class="form-group">
                <label>Kullanıcı Adı</label>
                <input type="text" class="form-control" name="Email" value="" id="email"/>
            </div>
            <div class="form-group">
                <label>Şifre</label>
                <input type="password" name="Password" class="form-control" value="" id="password"/>
            </div>
            <div class="form-check">
                <input type="checkbox" name="RememberMe" class="form-check-input" id="rememberMe"/>
                <label class="form-check-label" for="RememberMe">Beni Hatırla</label>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" name="name" value="Giriş" id="btnLogin" />
            </div>
        <div class="form-group">
            <a asp-controller="Person" asp-action="CreateUser">Kayıt Ol</a>
            <a asp-controller="Login" asp-action="ResetPassword">Şifre Yenile</a>
        </div>
    </div>
</body>
</html>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/Login.js"></script>
